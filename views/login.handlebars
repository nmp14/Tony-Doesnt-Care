<main class="row">
    <div class="column">
        <form>
            <h2 class="text-centered my-5">Enter your credentials to login</h2>
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control" id="email">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password">
            </div>
            <p id="missingInfo" class="red hidden">Please enter both fields</p>
            <p id="failedLogin" class="red hidden">Incorrect login information</p>
            <button id="loginBtn" type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</main>

<script src="/JS/login.js"></script>