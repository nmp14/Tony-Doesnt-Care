<h1 class="text-center my-4">List of Chemicals Available</h1>
{{#if length}}
<form class="hidden">
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Search (WIP doesnt work yet)</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <div id="emailHelp" class="form-text">Find a chemical</div>
    </div>

    <button type="submit" class="btn btn-primary mb-3">Submit</button>
</form>
{{/if}}

<hr>
<ul id="alphabet" class="custom-flex">

</ul>

<!-- List of chemicals -->
<ul id="chemicalList" class="list-group my-4 text-dark">
    {{#if length}}
    {{#each chemicals as |chemical|}}
    {{> chemical-list chemical}}
    {{/each}}
    {{else}}
    <p class="text-center">There are no chemicals yet</p>
    {{/if}}
</ul>

<ul id="searchedChemicalList" class="list-group my-4 text-dark hidden">

</ul>

<!-- Modal -->
<div class="modal fade" id="confirmChemDeleteModal" tabindex="-1" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-dark" id="modalChemicalName">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-dark">
                <p>Are you sure you want to delete this chemical?</p>
                <button id="confirmChemDelete" class="btn btn-danger">Yes</button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>